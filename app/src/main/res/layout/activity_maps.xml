<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/CityName"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="34dp"
        android:textColor="#185FEC"
        android:gravity="center"
        android:textStyle="bold|italic"

        android:shadowColor="#F6F4F1"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="248dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:shadowColor="#CF6F0A"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="10"

        android:text="CHECK OUT THE WEATHER!"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/CityName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Temperature"
        android:layout_width="174dp"
        android:layout_height="113dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="154dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="32Â°C"
        android:textColor="#FFFFFF"
        android:textSize="75dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CityName" />

    <Button
        android:id="@+id/gdButton"
        android:layout_width="387dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:onClick="GetDetails"
        android:shadowColor="#FF0000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="GET DETAILS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/wc"
        android:layout_width="161dp"
        android:layout_height="93dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="4dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="Weather Condtion:"

        android:textColor="#00FFB7"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/wd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/wd"
        android:layout_width="251dp"
        android:layout_height="98dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="4dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="Weather Description:"

        android:textColor="#00FFB7"
        android:textSize="37dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/gdButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Main"
        android:layout_width="207dp"
        android:layout_height="89dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="Fuzy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/wc" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="204dp"
        android:layout_height="83dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:shadowColor="#0B0B0A"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="VERY MUCH FUZZY"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/gdButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/wc" />


    </androidx.constraintlayout.widget.ConstraintLayout>

